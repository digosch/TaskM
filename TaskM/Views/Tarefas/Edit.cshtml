@model TaskM.Models.Tarefa

@{
    ViewBag.Title = "Editar Tarefa";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="fundologinmenu form-horizontal mtlight0">
        
     
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdTarefa)
        <h4 class="colorintro">Edite o Nome da Tarefa</h4>
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.NomeTarefa, htmlAttributes: new { @class = "control-label col-md-2 colorintro" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NomeTarefa, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NomeTarefa, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Index" ,new { },new { @class = "btn btn-default" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
