@model TaskM.Models.Usuario
@{
    ViewBag.Title = "Roles";
}

<h4>Configurações de Permissões - Usuário - @Model.Nome</h4>

<p>
    @Html.ActionLink("Nova Permissão", "AddRole", new { userId = Model.UserId }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Voltar", "Index", new { }, new { @class = "btn btn-info" })
</p>

<table class="table">
   

    @for (int i = 0; i < Model.Permissoes.Count; i++)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => Model.Permissoes[i].Name)
            </td>
           
            <td>
                @Html.ActionLink("Excluir", "Delete", new { user = Model, roleId = Model.Permissoes[i].IdPermissao })

            </td>
        </tr>
    }

</table>